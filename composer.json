{
    "name": "kregel/basement-digitalocean",
    "type": "library",
    "description": "The Basement server package for Digital Ocean",
    "keywords": [
        "kregel",
        "thebasement.club",
        "basement-digitalocean"
    ],
    "homepage": "https://github.com/kregel/basement-digitalocean",
    "license": "MIT",
    "authors": [
        {
            "name": "Austin Kregel",
            "email": "security@austinkregel.com",
            "homepage": "https://github.com/austinkregel",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "graham-campbell/digitalocean": "^6.0",
        "guzzlehttp/guzzle": "^6.5",
        "kregel/basement-common": "^0.0.3"
    },
    "require-dev": {
        "phpunit/phpunit": ">=8.0",
        "vlucas/phpdotenv": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Kregel\\Basement\\DigitalOcean\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kregel\\Basement\\DigitalOcean\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
